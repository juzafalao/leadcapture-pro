# Supabase — obter em https://supabase.com/dashboard/project/<projeto>/settings/api
SUPABASE_URL=https://<projeto>.supabase.co
SUPABASE_SERVICE_KEY=<sua-service-role-key>

# Porta do servidor (padrão: 4000)
PORT=4000

# Origens permitidas pelo CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,https://<seu-dominio>.vercel.app

# Nodemailer — notificações por e-mail (opcional)
EMAIL_FROM=noreply@seudominio.com.br
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=seu@gmail.com
EMAIL_PASS=<senha-de-app>
